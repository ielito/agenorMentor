{
    "manifest_version": 3,
    "name": "GPT Image Describer",
    "version": "1.0",
    "description": "Captura uma imagem, envia ao GPT e gera PDF ou TXT com a descrição.",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "<all_urls>"
    ]
  }